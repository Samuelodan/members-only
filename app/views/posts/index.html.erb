<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <div>
        <%#= link_to post.title, post %>
        <p>Post title: <%= post.title %></p>
      </div>

      <% if user_signed_in? %>
        <div>
          <p>Post author: <%= User.find(post.User_id).email %></p>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>

<% if user_signed_in?  %>
  <%= link_to "Sign Out", destroy_user_session_path, 'data-turbo-method': :delete %>
<% else %>
  <%= link_to "Sign in", new_user_session_path %>
<% end %>
